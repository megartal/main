<form id="hotel-search-form" class="hotel-search-form" action="/hotels" style="font-family: 'B Yekan'">

    <label class="field destination white-text">
        جستجوي شهر
        <input type="text" name="q" id="q" placeholder="شهر یا هتل مورد نظر را انتخاب کنيد." value="" autocomplete="off" />
        <input id="cityId" name="city" style="display: none;">
        <div id="autocomplete-position">
        </div>
        <button id="clear-search" class="destination-clear hidden" type="button" tabIndex="-1" aria-label="Clear"></button>
        <div id="empty-destination-box" class="hotel-search-form--error">
            <div class="text">لطفا شهر مورد نظر را انتخاب کنيد.</div>
        </div>
        <div class="alert" style="display: none"><span class="closebtn">&times;</span>لطفا برای جستجو شهر با هتل مورد نظر را انتخاب کنید.</div>
    </label>

    <fieldset class="field dates">
        <div class="col-sm-6 dateRangePicker">
            <label class="control-label margin-b-0 white-text" placeholder="تاريخ ورود">تاريخ ورود</label>
            <input type="text" class="form-control" id="dateRangePicker" name="from" required="" oninvalid="this.setCustomValidity('لطفا تاریخ ورود را انتخاب کنيد')"
                oninput="setCustomValidity('')" autocomplete="off" placeholder="   تاريخ ورود" />
        </div>
        <div class="col-sm-6 dateRangePicker">
            <label class="control-label margin-b-0 white-text">تاريخ خروج</label>
            <input type="text" class="form-control" id="dateRangePickerEnd" name="to" required="" oninvalid="this.setCustomValidity('لطفا تاریخ خروج را انتخاب کنيد')"
                oninput="setCustomValidity('')" autocomplete="off" placeholder="   تاريخ خروج" />
        </div>
    </fieldset>

    <fieldset class="field accommodation">
        <label class="field guests white-text">
            تعداد
            <select id="na" name="na">
                <option value="1">1</option>
                <option value="2" selected="selected">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
            </select>
        </label>
        <label class="field rooms">
            اتاق ها
            <select id="nroom" name="nr">
                <option value="1" selected="selected">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
            </select>
        </label>
    </fieldset>

    <div class="field submit">
        <button id="submit-mysearch" type="submit" class="hotel-cta-main-lg">جستجوي هتل ها</button>
    </div>
</form>
